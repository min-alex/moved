<h1>Add New User</h1>

<%= form_tag :action => 'create' do %>
	<p><label for = "name">Name</label>:

	<%= text_field :users, 'name' %></p>

	<p><label for = "email">Email</label>:

	<%= text_field :users, 'email' %></p>

	<p><label for = "username">Username</label>:

	<%= text_field :users, 'username' %></p>

	<p><label for = "password">password</label>:


	<%= text_field :users, 'password' %></p>


	<%= submit_tag "Create" %>

<% end %>

<%= link_to 'Back', {:action => 'index', :controller => 'users'} %>